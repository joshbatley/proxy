{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitReturns": false,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "dist/client",
    "types": [
      "node",
      "jest"
    ],
    "noFallthroughCasesInSwitch": true,
    "rootDir": "./src",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esNext",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    "coverage",
    ".github",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
